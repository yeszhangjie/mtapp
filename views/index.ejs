<%- include('partials/head.ejs') %>

    <body>
        <div id="app">
            <div class="container home-container">
                <header class="c-header">
                    <div class="header-city">
                        常德
                        <img class="city-arrow" src="https://p0.meituan.net/travelcube/45c79a92755b54adc9dc1c4682b123b3201.png">
                    </div>
                    <div class="header-search ellipse">
                        <img class="search-icon" src="https://p0.meituan.net/travelcube/99c29829cf1b85d5cdbc76a1bd0b7329814.png">
                        请输入商家名、品类或者商圈
                    </div>
                    <section class="me-wrap">
                        <img class="me-btn" src="https://p0.meituan.net/travelcube/641521461179df7cfb88738dd1ea11ec1031.png">
                    </section>
                </header>
                <section class="c-guide-app">
                    <div class="guide-content"><img class="guide-logo"
                            src="https://p1.meituan.net/travelcube/7264ce9c25de2e464e3acd996fe8ad362803.png">
                        <p class="content-wrap"><span class="content-title">省钱利器 购物超划算</span><span
                                class="content-desc">吃喝玩乐尽在美团</span></p>
                    </div>
                    <a href="/add-restaurant" class="add-btn">添加餐馆</a>
                </section>
                <section class="c-body c-home-body">
                    <div class="category-module">
                        <% categories.forEach(function(item,index){ %>
                            <div class="category-wrap">
                                <a href="/category/<%= item.name %>">
                                    <div>
                                        <img src="/img/category/<%= item.image %>" alt="">
                                    </div>
                                    <h4>
                                        <%= item.name %>
                                    </h4>
                                </a>
                            </div>
                        <% })%>
                    </div>
                    <h2>全部餐馆</h2>
                    <div id="restaurants"></div>
                    <div class="loader">
                        <div class="ball"></div>
                        <div class="ball"></div>
                        <div class="ball"></div>
                    </div>
                </section>
                <%- include('partials/footer.ejs') %>